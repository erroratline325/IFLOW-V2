@model MvcAppV2.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <title>Login - iFlowSeed</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href=" @Url.Content("~/Images/Final Logo-01-01")" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/fonts/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/hamburgers.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/select2.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/util.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <style>


        h3 {
            margin: 0;
            padding: 0 0 20px;
            text-align: center;
            top: -50px;
            right: calc(50% - 50px);
            font-size: 24px;
            color: #feffff;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

    </style>


</head>

<body>


    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        //this is for create form tag
        @Html.AntiForgeryToken() // this is for prevent CSRF attack
        @Html.ValidationSummary("", new { @class = "myvalidation" })
        <div class="limiter">
            <div class="container-login100" style="position: fixed;background-image:url('@Url.Content("~/Images/i-flowBackground.png")' );">
                <div class="wrap-login100 p-t-30 p-b-30">



                    <form class="login100-form validate-form">
                        <center>
                            <div class="login100-form-avatar">
                                <img src="@Url.Content("~/Images/i-flowlogo-REVERSED.png")" style="width:300px; height:100px;">
                            </div>
                        </center>
                        <h3 style="color:lavenderblush;">USER LOGIN</h3>
                        <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                            @Html.TextBoxFor(a => a.UserName, new { @class = "input100", type = "text", placeholder = "Username", name = "UserName", @autocomplete = "off", style = "background-color:White; font-family:Arial;" })
                            @*<input class="input100" type="text" name="username" placeholder="Username">*@
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                            @Html.TextBoxFor(a => a.Password, new { @class = "input100", type = "password", placeholder = "Password", name = "pass", @autocomplete = "off", style = "background-color:White; font-family:Arial;" })
                            @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn p-t-10">
                            <button class="login100-form-btn" style="color:white; background-color:blue; font-weight:bold; font-size:large; font-family:Arial;" type="submit">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                Login
                            </button>
                        </div>
                        <footer class="page-footer font-small blue">

                            <!-- Copyright -->
                            <div class="footer-copyright text-center py-3">
                                © @DateTime.Now.Year:
                                <a href="https://www.intercity.com.my/"> INTERCITY-MPC (M) SDN BHD</a>
                            </div>
                            <!-- Copyright -->

                        </footer>

                    </form>

                </div>
            </div>
        </div>




        <script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/popper.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/select2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    }
</body>

</html>
